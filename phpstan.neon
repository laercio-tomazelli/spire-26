includes:
    - vendor/larastan/larastan/extension.neon
    - vendor/nesbot/carbon/extension.neon

parameters:
    paths:
        - app
        - bootstrap/app.php
        - config
        - database
        - routes

    # Level 6 é um bom equilíbrio - pega a maioria dos erros sem ser muito restritivo
    level: 6

    tmpDir: /tmp/phpstan

    # Excluir arquivos problemáticos
    excludePaths:
        - app/Http/Middleware/*
