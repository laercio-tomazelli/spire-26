#!/bin/sh
#
# Pre-commit hook para Laravel
# Roda verificaÃ§Ãµes antes de cada commit
#

echo "ğŸ” Rodando verificaÃ§Ãµes pre-commit..."

# Cores para output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Pega apenas arquivos PHP que foram modificados/adicionados
STAGED_PHP_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.php$')

if [ -z "$STAGED_PHP_FILES" ]; then
    echo "${GREEN}âœ… Nenhum arquivo PHP modificado${NC}"
    exit 0
fi

echo "${YELLOW}ğŸ“ Arquivos PHP modificados:${NC}"
echo "$STAGED_PHP_FILES"
echo ""

# 1. Verificar sintaxe PHP
echo "${YELLOW}1/3 Verificando sintaxe PHP...${NC}"
for FILE in $STAGED_PHP_FILES; do
    if [ -f "$FILE" ]; then
        php -l "$FILE" > /dev/null 2>&1
        if [ $? -ne 0 ]; then
            echo "${RED}âŒ Erro de sintaxe em: $FILE${NC}"
            exit 1
        fi
    fi
done
echo "${GREEN}âœ… Sintaxe OK${NC}"

# 2. Verificar estilo de cÃ³digo com Pint
echo "${YELLOW}2/3 Verificando estilo de cÃ³digo (Pint)...${NC}"
./vendor/bin/pint --test --dirty > /dev/null 2>&1
if [ $? -ne 0 ]; then
    echo "${RED}âŒ Problemas de estilo encontrados!${NC}"
    echo "${YELLOW}ğŸ’¡ Execute 'composer lint' para corrigir automaticamente${NC}"
    exit 1
fi
echo "${GREEN}âœ… Estilo OK${NC}"

# 3. Rodar testes rÃ¡pidos
echo "${YELLOW}3/3 Rodando testes...${NC}"
./vendor/bin/pest --parallel > /dev/null 2>&1
if [ $? -ne 0 ]; then
    echo "${RED}âŒ Testes falharam!${NC}"
    echo "${YELLOW}ğŸ’¡ Execute 'composer test' para ver os detalhes${NC}"
    exit 1
fi
echo "${GREEN}âœ… Testes OK${NC}"

echo ""
echo "${GREEN}ğŸ‰ Todas as verificaÃ§Ãµes passaram! Commit autorizado.${NC}"
exit 0
